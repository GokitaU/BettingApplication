@model Aplikacija_za_kladenje.Models.RoleVM

@{
    ViewData["Title"] = "Create new role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create new role</h1>
<style>
    button:hover {
        opacity: 0.8;
    }

    form {
        width: 100%;
        height: 300%;
        padding-top: 20px;
        margin-left: 350px;
    }
</style>
<body class="text-center">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <h1 class="h3 mb-3 font-weight-normal">Registration</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" style="width:auto" class="btn btn-lg btn-outline-success" />
            </div>
            <div>
                <a asp-action="Login" class="btn btn-outline-info">Back to Login</a>
            </div>
        </form>
    </div>
</body>


