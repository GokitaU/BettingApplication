@model IEnumerable<Aplikacija_za_kladenje.Models.Wallet>

@{
    ViewData["Title"] = "My Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Wallet</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                UserId
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Userid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo) kn
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Userid">Payment</a>
            </td>
        </tr>
}
    </tbody>
</table>
