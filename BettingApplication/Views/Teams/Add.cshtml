@model IEnumerable<BettingApplication.Models.Leagues>

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               League name
            </th>
            <th>
                Team name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @using (Html.BeginForm("Teams", "Add", new { }, FormMethod.Post))
        {
            <tr>
                <td>
                    @{
                        string temp = null;
                    }
                    <select name="league" id="0">
                        <option value="0">Select League</option>
                        @{
                            foreach (var item in Model)
                            {
                                @if (@temp != item.Name)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                                temp = item.Name;
                            }
                        }
                    </select>
                </td>
                <td>
                    <input type="text" name="name" class="form-control" placeholder="Name" />
                </td>
                <td>
                    <input type="submit" value="Create team" class="btn btn-primary" />
                </td>
                <td>
                    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
                </td>
            </tr>
        }
    </tbody>
</table>
