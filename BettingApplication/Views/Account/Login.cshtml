@model BettingApplication.Models.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    button:hover {
        opacity: 0.8;
    }

    form {
        width: 100%;
        height: 300%;
        padding-top: 60px;
        margin-left: 350px;
    }
</style>
<body class="text-center">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-lg btn-outline-success btn-block" />
                </div>
                <div>
                    <a asp-action="Register" class="btn btn-sm btn-outline-primary">Registration</a>
                </div>
                @Html.ValidationMessage("Wrong", new { @class = "text-danger" })
            }
        </div>
    </div>
</body>





