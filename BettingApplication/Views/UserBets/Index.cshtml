@model IEnumerable<BettingApplication.Models.UserBets>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Win)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetAmount) kn
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalOdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashOut) kn
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Win)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@if (@TempData["betmsg"] != null)
{
    <script>alert("@TempData["betmsg"]");</script>
}
